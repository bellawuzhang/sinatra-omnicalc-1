<h1>Provide a calculation</h1>

<form action="/payments/results">

  <div>
    <label for="hippo">
      APR
    </label>

    <input id="hippo" text="text" name="apr_input" placeholder="E.g. 5.42">
  </div>

  <div>
    <label for="orange">
      Number of years
    </label>

    <input id="orange" text="text" name="years_input" placeholder="How many years to repay?">
  </div>

  <div>
    <label for="plum">
      Principal
    </label>

    <input id="plum" text="text" name="principal_input" placeholder="How much principal?">
  </div>

  <button>
    Calculate monthly payment
  </button>
</form>
